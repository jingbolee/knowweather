<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.lijingbo.knowweather"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyStyleTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/MyStyleTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ShowWeatherActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activity.ChooseProvActivity"
            android:label="@string/title_activity_choose_city"
            android:theme="@style/MyStyleTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activity.ChooseDistintActivity"
            android:label="@string/title_activity_choose_distint"
            android:theme="@style/MyStyleTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activity.ChooseCityActivity"
            android:label="@string/title_activity_choose_city"
            android:theme="@style/MyStyleTheme.NoActionBar">
        </activity>
    </application>

</manifest>
